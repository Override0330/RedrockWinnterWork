<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--需要设置cardUseCompatPadding="true"才可以设置margin-->
    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        android:layout_margin="9dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools">

            <TextView
                android:id="@+id/tv_gank_news_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingLeft="8dp"
                android:paddingTop="2dp"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:text="这个是标题" />
            <HorizontalScrollView
                android:id="@+id/hs_gank_news_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_gank_news_desc">
                <LinearLayout
                    android:id="@+id/ll_gank_news_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/tv_gank_news_desc"
                app:layout_constraintTop_toBottomOf="@id/hs_gank_news_images">
                <TextView
                    android:id="@+id/tv_gank_news_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    tools:text="作者"/>
                <TextView
                    android:id="@+id/tv_gank_news_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    tools:text="2019.2.8 14:05"/>
            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
